<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenApp1.Models.Area_Del_Circulo"
             Title="Area_Del_Circulo">
    
    <VerticalStackLayout>

        <Label Text="Ingrese Radio:" />
        <Entry Keyboard="Numeric" Text="{Binding Radio}" />
        <Label Text="Resultado" />
        <Entry Text="{Binding Resultado}" IsReadOnly="True" />
        <Button Text="Calcular Area" Command="{Binding CalcularCommand}" />
        <Button Text="Limpiar" Command="{Binding LimpiarCommand}" />

    </VerticalStackLayout>
    
</ContentPage>